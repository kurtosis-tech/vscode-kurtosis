{
  "name": "kurtosis-extension",
  "displayName": "Kurtosis",
  "description": "This is official extension for Starlark based Kurtosis packages",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.2"
  },
  "repository": {
    "url": "https://github.com/kurtosis-tech/vscode-kurtosis",
    "type": "git"
  },
  "preview": true,
  "categories": [
    "Other"
  ],
  "keywords": [
    "Docker",
    "Kubernetes"
  ],
  "icon": "image/logo.png",
  "publisher": "Kurtosis",
  "activationEvents": [
    "onLanguage:starlark"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "starlark",
        "aliases": [
          "Starlark",
          "starlark"
        ],
        "extensions": [
          ".star"
        ],
        "configuration": "./syntaxes/starlark.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "starlark",
        "scopeName": "source.starlark",
        "path": "./syntaxes/starlark.tmLanguage.json"
      }
    ],
    "configuration":{
      "title": "kurtosis-extension",
      "properties": {
        "klsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "debug",
            "verbose"
          ],
          "default": "verbose",
          "description": "Echoes communication between Visual Studio Code and the language server onto the \"klsp\" output channel."
        }
      }
    }
  },
  "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx"
	},
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.2",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
